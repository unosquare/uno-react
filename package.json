{
    "name": "uno-react",
    "version": "1.10.0",
    "description": "Common functions, and hooks for React.",
    "main": "lib/index.js",
    "scripts": {
        "test": "jest --runInBand",
        "cest": "jest --collectCoverage",
        "build": "tsc",
        "lint": "eslint src/**/*.{js,ts,tsx}",
        "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
        "prettier": "prettier --check src/**/*.ts*",
        "prettier:fix": "prettier --write src/**/*.ts*",
        "codestyle:fix": "npm run lint:fix && npm run prettier:fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/unosquare/uno-react.git"
    },
    "keywords": [
        "react",
        "hooks",
        "common",
        "swan"
    ],
    "author": "Unosquare",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/unosquare/uno-react/issues"
    },
    "homepage": "https://github.com/unosquare/uno-react#readme",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.4.1",
        "eslint": "^8.46.0",
        "eslint-config-unosquare": "^0.3.2",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.6.2",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-test-renderer": "^18.2.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.6"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "files": [
        "lib"
    ],
    "dependencies": {
        "uno-js": "^3.22.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": [
                "ts-jest",
                {
                    "diagnostics": false,
                    "tsconfig": "tsconfig.json"
                }
            ]
        },
        "testMatch": [
            "**/src/**/*.test.+(ts|js|tsx)"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "coverageReporters": [
            "lcov",
            "text"
        ],
        "setupFilesAfterEnv": [
            "./setupTests.ts"
        ]
    }
}
